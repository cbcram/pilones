    <div id="container" class="container">
        <div id="divtaula" class="row">
            <div class="col-12">
                <div class="titolknob">Llistat d'usuaris</div>
                <div id="lataula" class="taules">
                    <table class="datatable stripe" id="taula">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nom</th>
                                <th>Cognoms</th>
                                <th>DNI</th>
                                <th>Entrada</th>
                                <th>Sortida</th>
